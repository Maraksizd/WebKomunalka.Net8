@model PaymentViewIndexModel

@{
ViewData["Title"] = "Payments";
var totalPages = Model.TotalPages;
var currentPage = Model.CurrentPage;
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div id="tableContainer" class="col-md-9">
            <div class="row mb-3">
                <div class="col-md-6 text-start">
                    <a href="@Url.Action("Create")" class="btn btn-success">Додати новий платіж</a>
                </div>
                <div class="col-md-6 text-end">
                    <button id="toggleSidebar" class="btn btn-primary">Показати/Приховати сайдбар</button>
                </div>
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Amount Usage</th>
                    <th>Total Price</th>
                    <th>Service Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @if (Model._uPayments != null && Model._uPayments.Any())
                {
                foreach (var payment in Model._uPayments)
                {
                <tr>
                    <td>@payment.Id</td>
                    <td>@payment.Date</td>
                    <td>@payment.AmountUsage</td>
                    <td>@payment.TotalPrice</td>
                    <td>@Model.GetServiceNameById(payment.ServiceId)</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = payment.Id })" class="btn btn-info btn-sm">Деталі</a>
                        <a href="@Url.Action("Delete", new { id = payment.Id })" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
                }
                }
                else
                {
                <tr>
                    <td colspan="6" class="text-center">No payments found</td>
                </tr>
                }
                </tbody>
            </table>

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, sortedBy = ViewBag.SortedBy, filterServiceName = ViewBag.FilterServiceName, filterAmountUsage = ViewBag.FilterAmountUsage, filterTotalPrice = ViewBag.FilterTotalPrice })">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, sortedBy = ViewBag.SortedBy, filterServiceName = ViewBag.FilterServiceName, filterAmountUsage = ViewBag.FilterAmountUsage, filterTotalPrice = ViewBag.FilterTotalPrice })">@i</a>
                    </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, sortedBy = ViewBag.SortedBy, filterServiceName = ViewBag.FilterServiceName, filterAmountUsage = ViewBag.FilterAmountUsage, filterTotalPrice = ViewBag.FilterTotalPrice })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div id="sidebar" class="col-md-3">
            <form method="get" class="mb-4">
                <div class="mb-3">
                    <label for="filterServiceName" class="form-label">Назва сервісу</label>
                    <select id="filterServiceName" name="filterServiceName" class="form-select">
                        <option value="">Select a service</option>
                        @if (Model._uServices != null)
                        {
                        foreach (var service in Model._uServices)
                        {
                        <option value="@service.Id">@service.ServiceName</option>
                        }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="filterAmountUsage" class="form-label">Amount Usage</label>
                    <input type="text" id="filterAmountUsage" name="filterAmountUsage" class="form-control" placeholder="Filter by Amount Usage"/>
                </div>

                <div class="mb-3">
                    <label for="filterTotalPrice" class="form-label">Total Price</label>
                    <input type="text" id="filterTotalPrice" name="filterTotalPrice" class="form-control" placeholder="Filter by Total Price"/>
                </div>

                <div class="mb-3">
                    <label for="sortedBy" class="form-label">Сортування за</label>
                    <select id="sortedBy" name="sortedBy" class="form-select">
                        <option value="">Select an option</option>
                        <option value="Id">Id</option>
                        <option value="Date">Date</option>
                        <option value="AmountUsage">Amount Usage</option>
                        <option value="TotalPrice">Total Price</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Застосувати</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary w-100 mt-2">Скинути фільтри</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
        var sidebar = document.getElementById('sidebar');
        var tableContainer = document.getElementById('tableContainer');
        if (sidebar.style.display === 'none' || sidebar.style.display === '') {
            sidebar.style.display = 'block';
            tableContainer.classList.remove('col-md-12');
            tableContainer.classList.add('col-md-9');
        } else {
            sidebar.style.display = 'none';
            tableContainer.classList.remove('col-md-9');
            tableContainer.classList.add('col-md-12');
        }
    });
</script>
}
