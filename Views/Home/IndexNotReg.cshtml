
@{
ViewData["Title"] = "You are";
ViewData["TitleRed"] = "not registered";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 w-[450px]">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"] <span style="color: red;">@ViewData["TitleRed"]</span></h2>
                </div>
